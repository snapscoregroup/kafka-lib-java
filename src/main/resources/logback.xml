<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="60 seconds">

    <property name="log.base" value="/tmp/kafka_lib_logs"/>

    <!-- ========================================================== -->

    <!-- The appender output to the console console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender" target="System.out">
        <encoder charset="UTF-8">
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS,UTC} %thread [%logger{5}]-[%le] - %m%n</pattern>
        </encoder>
        <target>System.out</target>
    </appender>


    <!-- The appender output destination file - file> -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.base}/status.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.base}/status-%d{yyyy-MM-dd-HH}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS,UTC} %thread [%logger{5}]-[%le] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="console-queue" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>20000</queueSize>
        <appender-ref ref="console"/>
    </appender>

    <appender name="file-queue" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>20000</queueSize>
        <appender-ref ref="file"/>
    </appender>

    <appender name="JSON" class="ch.qos.logback.core.FileAppender">
        <file>${log.base}/kafka_lib_json.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"kafka-lib"}</customFields>
        </encoder>
    </appender>

    <!-- Data is written to the destination - recording> -->
    <appender name="json-queue" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>10000</queueSize>
        <appender-ref ref="JSON"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="file-queue"/>
        <appender-ref ref="json-queue"/>
        <appender-ref ref="console-queue"/>
    </root>

</configuration>
